{{!-- <!-- News Listings --> --}}
{{!-- {{log articles}} --}}

{{#if articles}}

    {{#each articles}}
<div class="article" data-id='{{_id}}'>
    <div class="jumbotron jumbotron-fluid" id="header">
            <button type="button" class="btn btn-secondary" id="save-article">Save Article</button>
        <div class="container">
            <h1 class="display-4" id="headline">{{headline}}</h1>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid" id="footer">
        <div class="container">
            <p id="summary">{{summary}}...&nbsp;&nbsp;<a href="{{link}}" target="_blank">Continue to Story</a></p>
        </div>
    </div>
</div>

    {{/each}}

    {{else}}
<div class="article">
    <div class="jumbotron jumbotron-fluid no-listings" id="header">
        <div class="container">
            <h1 class="display-4" id="no-articles">You do not currently have any articles.</h1>
        </div>
    </div>
</div>

{{/if}}

{{!-- <!-- End Listings --> --}}

